#!groovy

properties([
        [$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/div-case-orchestration-service.git'],
        pipelineTriggers([[$class: 'GitHubPushTrigger']])]
        [pipelineTriggers([cron('15 01 * * *')]) // scheduling to trigger jenkins job
        ]),
        parameters([
                string(name: 'URL_TO_TEST', defaultValue: 'https://div-cos-aat.service.core-compute-aat.internal', description: 'The URL you want to run these tests against'),
        ])
])

@Library("Infrastructure")

def type = "java"
def product = "div"
def component = "cos"

withNightlyPipeline(type, product, component) {
    env.TEST_URL = params.URL_TO_TEST

    enableMutationTest()
    enableSecurityScan()
}
